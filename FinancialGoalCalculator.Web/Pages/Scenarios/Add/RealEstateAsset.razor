@page "/scenarios/add/realestateasset/{ScenarioId:int}/{AccountId:int}"

<div class="row">
    <EditForm Model="_generalAssetCase" OnValidSubmit="HandleSubmit">
        <div class="pt-3">
            <div class="row">                
                <div class="col-md-2 m-2">
                    <label class="">Growth Rate (%)</label>
                </div>
                <div class="col-md-2 mb-3">                
                    <InputNumber class="form-control" @bind-Value="@_generalAssetCase.GrowthRate" />                    
                </div>
                <div class="col-md-2 mb-3">
                    <input type="submit" class="btn btn-success" value="Save" />
                </div>
            </div>
        </div>
    </EditForm>
</div>